{
  "name" : "Ulmenstein",
  "author" : "AceVik <mail@acevik.de>",
  "version" : "0.1dev",
  "env" : {
    "license" : {
      "background" : {
        "tag": "<a href='https://www.freepik.com/free-vector/forest-herbs-blue-background_1380709.htm'>Designed by Freepik</a>"
      }
    }
  },

  "templates" : {
    "" : [
      {
        "builder" : "pug",
        "options": {
          "pretty": true
        },
        "src" : "*.pug"
      }
    ]
  },
  "assets" : {
    "css:fa5.css" : [
      {
        "builder": "sass",
        "options": {
          "errLogToConsole": true
        },
        "sourcemap": false,
        "minify": true,
        "src": [
          "css/font-awesome/*.scss"
        ]
      }
    ],

    "css:style.css" : [
      {
        "minify": true,
        "src": [
          "css/reset.css"
        ]
      },
      {
        "builder": "sass",
        "options": {
          "errLogToConsole": true
        },
        "src": [
          "css/app/*.scss"
        ]
      }
    ],

    "webfonts" : [
      {
        "sourcemap": false,
        "minify": false,
        "src" : [
          "webfonts/*"
        ]
      }
    ],

    "img" : [
      {
        "sourcemap": false,
        "minify": false,
        "src" : [
          "img/*"
        ]
      }
    ],

    "js:app.js" : [
      {
        "builder" : "babel",
        "options" : {
          "presets" : ["env"]
        },
        "src" : [
          "js/app/*.js"
        ]
      }
    ]
  }
}