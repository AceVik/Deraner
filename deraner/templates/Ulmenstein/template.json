{
  "name" : "Ulmenstein",
  "author" : "AceVik <mail@acevik.de>",
  "env" : {
    "test": "AceVik is sooo coool!!!"
  },

  "templates" : {
    "" : [
      {
        "builder" : "pug",
        "options": {
          "pretty": true
        },
        "src" : "*.pug"
      }
    ]
  },
  "assets" : {
    "css:fa5.css" : [
      {
        "builder": "sass",
        "options": {
          "errLogToConsole": true
        },
        "sourcemap": false,
        "minify": true,
        "src": [
          "css/font-awesome/*.scss"
        ]
      }
    ],

    "css:style.css" : [
      {
        "minify": true,
        "src": [
          "css/reset.css"
        ]
      },
      {
        "builder": "sass",
        "options": {
          "errLogToConsole": true
        },
        "src": [
          "css/app/*.scss"
        ]
      }
    ],

    "webfonts" : [
      {
        "sourcemap": false,
        "minify": false,
        "src" : [
          "webfonts/*"
        ]
      }
    ],

    "js:app.js" : [
      {
        "builder" : "babel",
        "options" : {
          "presets" : ["env"]
        },
        "src" : [
          "js/app/*.js"
        ]
      }
    ]
  }
}